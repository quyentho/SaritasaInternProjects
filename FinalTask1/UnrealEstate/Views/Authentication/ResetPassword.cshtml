@model UnrealEstate.Business.Authentication.ViewModel.Request.ResetPasswordRequest

<h1>Reset Password</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@if (ViewData["authenticationResponseMessage"] != null)
{
    <div class="text-danger">@ViewData["authenticationResponseMessage"].ToString()</div>
}

<form asp-controller="Authentication" asp-action="ResetPassword" method="post">
    <div class="offset-4">
        <div class="form-group col-md-4">
            <label>Email (*)</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Token (*)</label>
            <input asp-for="Token" class="form-control" placeholder="Email">
            <span asp-validation-for="Token" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Password (*)</label>
            <input type="password" class="form-control" asp-for="NewPassword" placeholder="Password">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Confirm Password (*)</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <input type="submit" class="form-control btn btn-success"/>
        </div>
    </div>
</form>

