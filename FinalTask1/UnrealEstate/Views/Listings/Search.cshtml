@using UnrealEstate.Models.ViewModels.RequestViewModels
@using Microsoft.AspNet.Identity
@model List<UnrealEstate.Models.ViewModels.ResponseViewModels.ListingResponse>

<partial name="_SearchBar" />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Author email</th>
            <th scope="col">Zip</th>
            <th scope="col">City</th>
            <th scope="col">Address line 1</th>
            <th scope="col">Address line 2</th>
            <th scope="col">Build year</th>
            <th scope="col">Beds</th>
            <th scope="col">Size</th>
            <th scope="col">Current highest bid price</th>
            <th scope="col">Starting price</th>
            <th scope="col">Due date</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.UserEmail
                </td>
                <td>
                    @item.Zip
                </td>
                <td>
                    @item.City
                </td>
                <td>@item.AddressLine1</td>
                <td>@item.AddressLine2</td>
                <td>@item.BuiltYear</td>
                <td>@item.Beds</td>
                <td>@item.Size</td>
                <td>@item.CurrentHighestBidPrice</td>
                <td>@item.StatingPrice</td>
                <td>@item.DueDate</td>
                <td>@item.Description</td>
                <td class="text-danger">@item.StatusName</td>
                <td class="btn-group">
                    <a class="btn btn-success" asp-action="Bid" asp-route-listingId=@item.Id asp-route-returnUrl=@string.Format($"{Context.Request.Path}{Context.Request.QueryString}")>Bid</a>
                    <a class="btn btn-primary" asp-action="Detail" asp-route-id=@item.Id asp-route-returnUrl=@string.Format($"{Context.Request.Path}{Context.Request.QueryString}")>View</a>
                    @if (User.IsInRole(UserRole.Admin))
                    {
                            <a asp-controller="Listings" asp-action="Disable" asp-route-listingId=@item.Id asp-route-returnUrl=@string.Format("{0}{1}", Context.Request.Path, Context.Request.QueryString) class="btn btn-danger">Disable</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Next page", "Search", (ListingFilterCriteriaRequest)ViewData["criteria"])

